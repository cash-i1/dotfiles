{
  "tab_size": 4,
  "vim_mode": true,
  "theme": "One Dark Pro",
  "restore_on_startup": "none",
  "ui_font_size": 18,
  "buffer_font_size": 20,
  "ui_font_family": "JetBrains Mono NL",
  "buffer_font_family": "JetBrains Mono NL",
  "buffer_font_weight": 600,
  "terminal": {
    "working_directory": "current_project_directory"
  },
  "inlay_hints": {
    "enabled": true
  },
  "scrollbar": {
    "show": "never"
  },
  "git": {
    "git_gutter": "hide"
  },
  "format_on_save": "off",
  "languages": {
    "JSONC": {
      "tab_size": 2
    },
    "JSON": {
      "tab_size": 2
    },
    "HTML": {
      "tab_size": 2
    },
    "CSS": {
      "tab_size": 2
    },
    "JavaScript": {
      "tab_size": 2
    }
  }
}
